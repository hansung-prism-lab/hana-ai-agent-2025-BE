{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*.ts", 
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}